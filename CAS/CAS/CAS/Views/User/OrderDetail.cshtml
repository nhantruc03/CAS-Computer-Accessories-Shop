@model IEnumerable<CAS.Models.MPC_OrderDetail_Product>

@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal sum = 0;
}

<style>
    .filter {
        font-weight: bold;
        color: black
    }

    .product-sec1 {
        max-width: 100%;
        margin: auto;
    }
</style>

<div class="product-sec1 my-4">
    <div class="ads-grid py-sm-5 py-4">
        <div class="container py-xl-4 py-lg-2">
            <!-- tittle heading -->
            <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
                <span>Chi tiết hóa đơn</span>
            </h3>
            <!-- //tittle heading -->
            <div class="row">
                <!-- product left -->
                <div class="agileinfo-ads-display col-lg-9">
                    <table class="table">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <td>Ảnh SP</td>
                            <th>Số lượng</th>
                            <th>Tổng giá</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.product.ID">
                                <td>@item.product.Name</td>
                                <td><img src="@item.product.Image" width="100" /></td>
                                <td>@item.orderdetail.Quantity</td>
                                <td>@(item.orderdetail.Price.GetValueOrDefault(0).ToString("N0"))₫</td>

                            </tr>
                            sum += @item.orderdetail.Price.Value;
                        }

                    </table>
                    <h2 style="float:right">Tổng tiền: @sum.ToString("N0")₫</h2>
                    <div class="clearfix"></div>
                    <a href="/thong-tin-dat-hang" class="btn btn-primary btn-default" style="float:right">Trở về</a>
                    <div class="clearfix"></div>
                </div>
                <!-- product right -->
                <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
                    <div class="side-bar p-sm-4 p-3">
                        <div class="search-hotel border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Thông tin</h3>
                            <div class="left-side py-2">
                                <ul>
                                    <li>
                                        <a class="filter" href="/thong-tin-ca-nhan">Thông tin cá nhân</a>
                                    </li>
                                    <li>
                                        <a class="filter" href="/thong-tin-dat-hang">Thông tin đơn đặt hàng</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- price -->
                        <!-- //price -->
                    </div>
                    <!-- //product right -->
                </div>
            </div>
        </div>
    </div>
</div>
