@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var NewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var FeatureProducts = (List<Model.EF.Product>)ViewBag.FeatureProducts;
}



@section banner{
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <!-- Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @for (int i = 1; i <= slides.Count(); i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item item1 active" style="background: url('../../Data/images/Hình-ảnh-buồn-về-cuộc-sống-6.jpg')no-repeat center;
                 background-size: cover;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                -ms-background-size: cover;">
                <div class="container">
                    <div class="w3l-space-banner">
                        <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                            <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                                Chào Mừng Bạn Đến Với
                                <span>CAS</span>
                            </h3>
                            <a class="button2" href="/">Shop Now </a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in slides)
            {
                <div class="carousel-item item1" style="background: url(@item.Image)no-repeat center;
                background-size: cover;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                -ms-background-size: cover;">
                    <div class="container">
                        <div class="w3l-space-banner">
                            <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                                <p>
                                    Giảm giá tới tận
                                    <span>10%</span>
                                </p>
                                <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                                    @item.Description
                                </h3>
                                <a class="button2" href="@item.Link">Đến ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>S</span>ản
            <span>P</span>hẩm
            <span>M</span>ới
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-12">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        @*<h3 class="heading-tittle text-center font-italic">CPU</h3>*@
                        <div class="row">
                            @foreach (var item in NewProducts)
                            {
                                var url = "/chi-tiet/" + item.Metatitle + "-" + item.ID;
                                <div class="col-md-4 product-men mt-5 ">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="@item.Image" alt="@item.Name" @*sizes="(max-width: 300px) 100vw, 300px"*@ style="width:200px; height: 200px;">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="@url" class="link-product-add-cart">Chi tiết</a>
                                                </div>
                                            </div>
                                            @*<span class="product-new-top">New</span>*@
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4" >
                                            <h4 class="pt-1">
                                                <a href="@url" style="font-size: 2.5vh">@item.Name</a>
                                            </h4>
                                            <div class="info-product-price my-2">

                                                @if (item.PromotionPrice.HasValue)
                                                {
                                                    <span class="item_price">@item.PromotionPrice.Value.ToString("N0")</span>
                                                    <del>@item.Price.Value.ToString("N0")</del>
                                                }
                                                else
                                                {
                                                    <span class="item_price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span>
                                                }
                                            </div>
                                            <button class="btnAddToCart btn button2" data-id="@item.ID">Thêm vào giỏ hàng</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- //first section -->
                    <!-- second section -->
                    <div class="product-sec1 product-sec2 px-sm-5 px-3">
                        <div class="row">
                            <h3 class="col-md-4 effect-bg">Summer Carnival</h3>
                            <p class="w3l-nut-middle">Get Extra 10% Off</p>
                            <div class="col-md-8 bg-right-nut">
                                <img src="/Assets/Client/images/image1.png" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- //second section -->
                </div>
            </div>
            <!-- //product left -->
        </div>
    </div>
</div>