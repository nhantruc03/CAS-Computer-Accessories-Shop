
@{ 
    var productcategories = ViewBag.ProductCategories;
    var quicklinks = ViewBag.QuickLinks;
}

<footer>
    <div class="footer-top-first">
        <div class="container py-md-5 py-sm-4 py-3">
            <!-- footer first section -->
            <h2 class="footer-top-head-w3l font-weight-bold mb-2">CAS</h2>
            <p class="footer-main mb-4">
                Computer Accessories Shop - Nơi bạn có thể dễ dàng tìm kiếm những linh kiện máy tính chất nhất, mới nhất, xịn xò nhất và
                phù hợp với túi tiền của bạn nhất. Từ CPU, VGA, ... đến chuột, bàn phím.
                <br />
                Từ kinh nghiệm nhiều năm, chúng tôi - CAS cam kết luôn uy tín và luôn giành những gì tốt nhất cho khách hàng của mình.
            </p>
            <!-- //footer first section -->
            <!-- footer second section -->
            <div class="row w3l-grids-footer border-top border-bottom py-sm-4 py-3">
                <div class="col-md-4 offer-footer">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="fas fa-dolly"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Giao hàng miễn phí</h3>
                            <p>Với đơn hàng từ 1 triệu</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offer-footer my-md-0 my-4">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Giao hàng siêu tốc</h3>
                            <p>Khắp cả nước</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offer-footer">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="far fa-thumbs-up"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Nhiều lựa chọn</h3>
                            <p>Số lượng mặt hàng nhiều nhất</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- //footer second section -->
        </div>
    </div>
    <!-- footer third section -->
    <div class="w3l-middlefooter-sec">
        <div class="container py-md-5 py-sm-4 py-3">
            <div class="row footer-info w3-agileits-info">
                <!-- footer categories -->
                <div class="col-md-4 col-sm-6 footer-grids">
                    <h3 class="text-white font-weight-bold mb-3">Danh mục sản phẩm</h3>
                    <ul>
                        @foreach (var item in productcategories)
                        {
                            <li class="mb-3">
                                <a href="/danh-muc-san-pham/@item.MetaTitle-@item.ID">@item.Name </a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- //footer categories -->
                <!-- quick links -->
                <div class="col-md-4 col-sm-6 footer-grids mt-sm-0 mt-4">
                    <h3 class="text-white font-weight-bold mb-3">Liên kết nhanh</h3>
                    <ul>
                        @foreach (var item in quicklinks)
                        {
                            <li class="mb-3">
                                <a href="@item.Link">@item.Name</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-md-4 col-sm-6 footer-grids mt-md-0 mt-4">
                    <h3 class="text-white font-weight-bold mb-3">Liên hệ</h3>
                    <ul>
                        <li class="mb-3">
                            <i class="fas fa-map-marker"></i> Khu phố 6, P.Linh Trung, Q.Thủ Đức, Tp.Hồ Chí Minh.
                        </li>
                        <li class="mb-3">
