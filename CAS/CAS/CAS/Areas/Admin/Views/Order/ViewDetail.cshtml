@model IEnumerable<CAS.Areas.Admin.Models.MPC_OrderDetail_Product>

@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Chi tiết đơn đặt hàng
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết đơn hàng: @ViewBag.orderID</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Tổng giá</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Tổng giá</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.product.ID">
                            <td>@item.product.Name</td>
                            <td>@item.orderdetail.Quantity</td>
                            <td>@(item.orderdetail.Price.GetValueOrDefault(0).ToString("N0"))</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Order/ChangeStatusAndBack/@ViewBag.orderID" class="btn btn-success btn-default">Cập nhật trạng thái và trở lại</a>
        </div>
    </div>
</div>
<script type="text/javascript">
        function RemoveRow() {
            var $tr = $(this).closest('tr');
            $tr.remove();
        }
</script>

