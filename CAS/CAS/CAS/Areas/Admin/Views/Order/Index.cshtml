@model IEnumerable<Model.EF.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách đơn đặt hàng
}

@section jsFooter{
    <script src="/Assets/Admin/js/Controller/orderController.js"></script>
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn đặt hàng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên người đặt</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Mã giảm giá</th>
                        <th>Tổng giá trị</th>
                        <th>Chi tiết</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên người đặt</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Mã giảm giá</th>
                        <th>Tổng giá trị</th>
                        <th>Chi tiết</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="row_@item.ID">
                        <td>@item.ShipName</td>
                        <td>@item.ShipMobile</td>
                        <td>@item.ShipEmail</td>
                        <td>@item.ShipAddress</td>
                        <td>@item.DiscountCodeID</td>
                        <td>@item.Total.GetValueOrDefault(0).ToString("N0")</td>
                        <td><a href="/Admin/Order/ViewDetail/@item.ID" class="btn btn-primary btn-default">Xem chi tiết</a></td>
                        <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                        <td>
                            @Ajax.ActionLink("Xóa","Delete", new {@id=item.ID },new AjaxOptions
                       {
                           HttpMethod = "Delete",
                           Confirm ="Bạn có muốn xóa đơn đặt hàng này ?",
                           OnSuccess="RemoveRow",

                       },new { @class ="btn btn-danger"})
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
        function RemoveRow() {
            var $tr = $(this).closest('tr');
            $tr.remove();
        }
</script>
